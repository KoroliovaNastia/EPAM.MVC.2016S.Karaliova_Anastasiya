@model QueryString.Models.Person

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@if (Model == null)
{
    using (Html.BeginForm())
    {
        
            <fieldset>
                <legend>Person</legend>
                <div>
                    <label>First Name:</label>@Html.TextBox("FirstName")
                </div>
                <div>
                    <label>Last Name:</label>@Html.TextBox("LastName")
                </div>
                <div>
                    <label>Role:</label>@Html.TextBox("Role")
                </div>
                <div>
                    <label>Date of Birth:</label>@Html.TextBox("BirthDate")
                </div>
                <div>
                    <label>Line1:</label>@Html.TextBox("HomeAddress.Line1")
                </div>
                <div>
                    <label>Line2:</label>@Html.TextBox("HomeAddress.Line2")
                </div>
                <div>
                    <label>Postal Code:</label>@Html.TextBox("HomeAddress.PostalCode")
                </div>
                <div>
                    <label>City:</label>@Html.TextBox("HomeAddress.City")
                </div>
                <div>
                    <label>Country:</label>@Html.TextBox("HomeAddress.Country")
                </div>

            </fieldset>
        
        <button type="submit">Submit</button>
    }
}
else
{
    
        <h4>Person</h4>
        <fieldset>
            <p>First Name :@Model.FirstName</p>
            <p>Last Name : @Model.LastName</p>
            <p>Role : @Model.Role</p>
            <p>Date of Birth: @Model.BirthDate</p>
            <p>Address Line2 : @Model.HomeAddress.Line2</p>
            <p>AddressSummary : @Model.HomeAddress.AddressSummary</p>
        </fieldset>
    
    Html.ActionLink("Back", "Index");
}
